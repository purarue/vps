#/usr/bin/env bash

wait-for-internet -q --timeout "${WFI_TIMEOUT:-10}" || exit 0

evry 1 hour -parse-goaccess-nginx && {
	printlog 'nginx-goaccess: generating html report...'
	"$REPOS/vps/nginx-goaccess" parsehtmlcached
}

evry 1 day -sync-nginx-logs && {
	printlog 'nginx-goaccess: syncing logs...'
	"$REPOS/vps/nginx-goaccess" sync
}
